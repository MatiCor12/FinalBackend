<div class="text-center">
    <div>
        <h2>Login</h2>
    </div>
    <br>
    <div>
        <form action="/api/sessions/login" method="POST">
            <label for="email">Email:</label>
            <input type="email" name="email" required>
            <label for="password">Password:</label>
            <input type="password" name="password" required>
            <button type="submit" class="btn btn-info">Get into</button>
        </form>
    </div>
    <br>
    <div>
        <a href="/api/sessions/forgot-password"><button class="btn btn-warning">Recover password</button></a>
    </div>
    <br>
    <div>
        <a href="/register"><button class="btn btn-info">Register</button></a>
        <h3>Or you can log in with</h3>
        <a href="/api/sessions/github"><button class="btn btn-info"><i class="bi bi-github"></i>GitHub</button></a>
    </div>
</div>